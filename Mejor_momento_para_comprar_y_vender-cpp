#include <iostream>
#include <vector>
#include <climits>
using namespace std;

int maxPro(vector<int>& prices) {
    int minPri = INT_MAX;
    int maxPro = 0;
    for (int price : prices) {
        if (price < minPri) {
            minPri = price;
        } else if (price - minPri > maxPro) {
            maxPro = price - minPri;
        }
    }
    return maxPro;
}

int main() {
    int n;
    cin >> n;
    vector<int> prices(n);
    for (int i = 0; i < n; ++i) cin >> prices[i];
    cout << maxPro(prices);
    return 0;
}
